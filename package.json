{
  "name": "finact",
  "productName": "Finact",
  "version": "0.3.2",
  "author": "pikapower9080",
  "description": "A Jellyfin desktop client for music",
  "type": "module",
  "main": "app/main.js",
  "scripts": {
    "dev": "vite --host --port 3000",
    "dev:electron": "bun run build && NODE_ENV=dev electron app/main.js",
    "build": "vite build --base=./",
    "build:electron": "vite build --base=./ --outDir build/dist && electron-builder",
    "build:electron:all": "vite build --base=./ --outDir build/dist && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --windows --linux --mac --x64 && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac --arm64",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write .",
    "generate-client": "@hey-api/openapi-ts -i https://"
  },
  "dependencies": {
    "@pikapower9080/easy-storage": "^1.1.1",
    "@szhsin/react-menu": "^4.5.0",
    "butterchurn": "^2.6.7",
    "butterchurn-presets": "^2.4.7",
    "copy-to-clipboard": "^3.3.3",
    "electron-store": "^10.1.0",
    "express": "^5.1.0",
    "express-ws": "^5.0.2",
    "localforage": "^1.10.0",
    "material-icons": "^1.13.14",
    "react": "^19.2.0",
    "react-blurhash": "^0.3.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.4",
    "react-scrubber": "^2.1.0",
    "rsuite": "^5.83.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@hey-api/openapi-ts": "0.80.15",
    "@types/express": "^5.0.3",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.37.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "vite": "^6.4.0"
  },
  "build": {
    "appId": "dev.pikarocks.finact",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "appimage"
      ]
    },
    "files": [
      "app/*",
      "build/dist/**/*"
    ]
  }
}
